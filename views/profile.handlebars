    <ul>
        <li class="btn red brandLogo border"><a href="/about">Chuck's Tees</a></li>
        <li class="border"><a href="/">about</a></li>
        <li class="border"><a href="/profile">Profile</a></li>
        <li class="border"><a href="/placeorder">Shop</a></li>
        <li class="border"><a href="/logout">Logout</a></li>
    </ul>
