<div class="login-image">
<div class="card center-align z-depth-4" id="signUpCard">
    <h4 class="center-align black-text card-title">Sign Up</h4>
    <form action="/signup" method="post">
        <div class="form-group" id="firstName">
            <input class="form-control validate" id="fName-input" name="user_first_name" type="text"
                   placeholder="First Name" required/>
        </div>

        <div class="form-group" id="lastName">
            <input class="form-control validate" id="lName-input" name="user_last_name" type="text"
                   placeholder="Last Name" required/>
        </div>

        <div class="form-group" id="number">
            <input class="form-control validate" id="number-input" name="user_number" type="number"
                   placeholder="Phone Number" />
        </div>

        <div class="form-group" id="email">
            <input class="form-control validate" id="email-input" name="user_email" type="email"
                   placeholder="Email" required/>
        </div>

        <div class="form-group" id="username">
            <input type="text" class="form-control" id="usernameinput" name="username"
                   placeholder="Username" required/>
                {{#if message}}
            <div class="alert alert-danger">{{message}}</div>
                {{/if}}
        </div>

        <div class="form-group" id="password">
            <input type="password" class="form-control" id="passwordinput" name="password"
                   placeholder="Password" required/>
        </div>
        <input type="submit" class="btn waves-effect waves-light red signupSubmit" id="submit" value="Signup"/>

    </form>
</div>
